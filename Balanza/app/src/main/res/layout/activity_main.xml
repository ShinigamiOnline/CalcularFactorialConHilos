<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="shinigami.balanza.balanza.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:gravity="center_vertical"
        android:text="BALANZA"
        android:textSize="35sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_frutas"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:background="@drawable/frutas"
            android:onClick="mostrarFrutas"
            android:text="FRUTAS" />

        <Button
            android:id="@+id/btn_verduras"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@drawable/verduras" />

        <Button
            android:id="@+id/button3"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_column="2"
            android:layout_row="0"
            android:text="Button" />

        <Button
            android:id="@+id/button5"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Button" />

        <Button
            android:id="@+id/button6"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_column="1"
            android:layout_row="1"
            android:text="Button" />

        <Button
            android:id="@+id/button7"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Button" />

    </GridLayout>
</LinearLayout>
